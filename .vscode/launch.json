    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "index:app"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
              "-s",
              "-m",
              "not slow"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {},
            "showReturnValue": true,
            "justMyCode": false
          }
    ]
}